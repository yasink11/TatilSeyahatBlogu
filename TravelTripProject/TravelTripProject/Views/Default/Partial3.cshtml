        @for (int i = 0; i < Model.Count; i++)
        {
            <li class="list-bg"><span>@(i + 1)</span><a href="/Blog/BlogDetay/@Model[i].ID">@Model[i].Baslik</a></li>
        }
    </ul>
    <a href="#" class="/Blog/Index/">Tüm Blogları Gör</a>
</div>
